import matplotlib.pyplot as plt
import seaborn as sns
import numpy as np
import pandas as pd

# Simulate 100 workflow run times (in seconds) (CHANGE THIS ONCE WE HAVE ACTUAL DATA)
#np.random.seed(42)
#workflow_runs = pd.DataFrame({
