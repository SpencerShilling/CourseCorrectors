#})

#Pull in actual data from cognitive agent unit testing
workflow_runs = pd.read_csv('OneDrive - George Mason University - O365 Production\Cognitive Agent Latency.csv') 

# Histogram of workflow execution times
plt.figure(figsize=(8, 5))
sns.histplot(workflow_runs["Execution_Time"], bins=10, color="green", kde=True)
plt.xlabel("Execution Time (seconds)")
plt.ylabel("Number of Workflow Runs")
plt.title("Distribution of Evidence Document Cognitive Agent Runs (n=60)")
plt.tight_layout()
plt.show()
