import os
import logging
from flask import request
import json
from pathlib import Path

LOG_DIR = "/data/logs/ffa94a6ffa1846fc/ffa94a6ffa1846fc_9"
LOG_FILE = os.path.join(LOG_DIR, "ffa94a6ffa1846fc_9.log")
os.makedirs(LOG_DIR, exist_ok=True)
os.makedirs("/data/output/ffa94a6ffa1846fc/", exist_ok=True)

logging.basicConfig(
    filename=LOG_FILE,
    filemode="a",
    format="%(asctime)s - %(levelname)s - %(message)s",
    level=logging.INFO
)

def main():
    try:
        logging.info("***************Audit Starter triggered***************")
        data = request.get_json(force=True)
        logging.info("Request Data %s", data)
        logging.info("CT=%s, Method=%s, Path=%s", request.content_type, request.method, request.path)
        raw = request.get_data(as_text=True)
        logging.info("Raw body: %r", raw[:2000])  # truncate if big
        #send data for audit logic
        
        audit_results_hold = "audit_response"
        logging.info("Agent finished sending data for audit.")
        output = {
            "status": "success",
            "audit_results_hold": audit_results_hold
        }
        return output
    except Exception as e:
        logging.error("Exception: %s", str(e))
        return {
            "status": "error",
            "message": str(e)
        }
#AgentCodeEnded
